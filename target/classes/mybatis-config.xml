<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- environment id를 구분하여 연결할 DB를 여려개 구성할 수 도 있음 -->	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="diver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@125.133.48.26:1521:xe?useUnicode=true&characterEncoding=utf8"/>
				<property name="username" value="giantstudy"/>
				<property name="password" value="gs123"/>
			</dataSource>
		</environment>
	</environments>

    <!-- config.xml 파일 안에 mapper를 등록해야 
         mybatis에서 해당 mapper를 가져다가 사용할 수 있음 -->
	<!-- SQL이 작성되는 mapper 파일 위치 등록 -->
	<mappers>
	<!-- 
		<mapper resource=""/>의 작성 기준
		->src/main/resources 폴더
		
	 -->
	 	<mapper resource="/mybatis-config.xml"/>
		<mapper resource="/mapper/BoardMapper.xml"/>
	</mappers>

</configuration>